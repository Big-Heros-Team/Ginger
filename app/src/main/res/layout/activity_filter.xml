<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilterActivity">

    <Spinner
        android:id="@+id/mealTypesSpinner"
        android:layout_width="298dp"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/CuisinesSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/mealType"
        app:layout_constraintTop_toBottomOf="@+id/queryName" />

    <Spinner
        android:id="@+id/CuisinesSpinner"
        android:layout_width="298dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/dietSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/mealTypesSpinner" />

    <Spinner
        android:id="@+id/dietSpinner"
        android:layout_width="292dp"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintBottom_toTopOf="@+id/maxReadyTime"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/CuisinesSpinner" />

    <Button
        android:id="@+id/filtering"
        android:layout_width="282dp"
        android:layout_height="63dp"
        android:layout_marginBottom="77dp"
        android:text="Filter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/maxCalories" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="37dp"
        android:gravity="center"
        android:text="Food Name"
        app:layout_constraintBottom_toTopOf="@+id/mealType"
        app:layout_constraintStart_toStartOf="@+id/mealType"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mealType"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:gravity="center"
        android:text="Meal Type"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="22dp"
        android:gravity="center"
        android:text="Cuisine"
        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/mealType" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="36dp"
        android:gravity="center"
        android:text="Diet Type"
        app:layout_constraintBottom_toTopOf="@+id/Time"
        app:layout_constraintStart_toStartOf="@+id/Time"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/queryName"
        android:layout_width="283dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="37dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toTopOf="@+id/mealTypesSpinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Time"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:layout_marginBottom="29dp"
        android:gravity="center"
        android:text="Cooking Time"
        app:layout_constraintBottom_toTopOf="@+id/textView14"
        app:layout_constraintStart_toStartOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <EditText
        android:id="@+id/maxReadyTime"
        android:layout_width="284dp"
        android:layout_height="55dp"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Time in minutes"
        app:layout_constraintBottom_toTopOf="@+id/maxCalories"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/Time"
        app:layout_constraintTop_toBottomOf="@+id/dietSpinner" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="187dp"
        android:layout_marginBottom="215dp"
        android:gravity="center"
        android:text="Calories"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/maxCalories"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Time" />

    <EditText
        android:id="@+id/minCalories"
        android:layout_width="91dp"
        android:layout_height="0dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="min"
        app:layout_constraintBottom_toBottomOf="@+id/textView14"
        app:layout_constraintEnd_toStartOf="@+id/maxCalories"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toTopOf="@+id/textView14" />

    <EditText
        android:id="@+id/maxCalories"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="47dp"
        android:layout_marginBottom="78dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="max"
        app:layout_constraintBottom_toTopOf="@+id/filtering"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/textView14"
        app:layout_constraintTop_toBottomOf="@+id/maxReadyTime" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="711dp" />

</androidx.constraintlayout.widget.ConstraintLayout>